#!/bin/bash

# zenity --info --text="STARTING CHANGE\n$(xrandr --listmonitors)"

xrandr > /dev/null

# HDMI plug
# xrandr \
    # --output eDP-1  --mode 1440x810  --rate 119.99 --primary \
    # --output HDMI-2 --mode 1920x1080               --above eDP-1
# Thunderdock
xrandr \
    --output eDP-1  --mode 1440x810  --rate 119.99 --primary \
    --output DP-2-3 --mode 1920x1080               --above eDP-1

